<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

 <hibernate-mapping>
 <class name="beans.Employee" table="Employee">
 
 	<id name="id"></id>
 	<property name="name"></property>
 	<property name="email"></property>
 	<property name="salary"></property>
 	
 	<union-subclass name="beans.SoftwareEmployee" table="SoftwareEmployee">
 		<property name="tool"></property> 		 		 		
 	</union-subclass>
 	
  	<union-subclass name="beans.HardwareEmployee" table="HardwareEmployee">
 		<property name="wh"></property> 		 		 		
 	</union-subclass>

 	<union-subclass name="beans.AdminEmployee" table="AdminEmployee">
 		<property name="branch"></property> 		 		 		
 	</union-subclass>
 </class>
 </hibernate-mapping>